pipeline{
    agent any
    environment{
	    IMG_NAME = "qwerty112358/django_jenkins"
    }
    stages{
        stage("build"){
			steps{
				sh "docker build -t ${IMG_NAME}:${GIT_COMMIT} -t ${IMG_NAME}:latest ."
			}
		}

		stage("push"){
			steps{
				withCredentials([usernamePassword(credentialsId: 'd5df0473-a586-40be-88a9-96b8c84d6ec2', usernameVariable: 
				'USERNAME', passwordVariable: 'PASSWORD')]) {
					sh 'docker login -u ${USERNAME} -p ${PASSWORD}'
					sh 'docker push ${IMG_NAME}:${GIT_COMMIT}'
				}	
			}
		}
    }
}
